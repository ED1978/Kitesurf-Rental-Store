<h1>New Rental</h1>

<form class="form" action="/rentals" method="post">
  <label>
  Select a Customer:
    <select name="customer_id">
      <% for customer in @customers %>
      <option value="<%= customer.id %>"><%= customer.name %></option>
      <% end %>
    </select>
  </label>
<br>
<br>
  <label>
  Select Equipment:
    <select name="stock_item_id">

      <% for stock_item in @stock_items %>
        <% rented = false %>

        <% for rental in @rentals %>
          <% if rental.stock_item_id == stock_item.id %>
            <% rented = true %>
          <% end %>
        <% end %>

        <% if rented == false %>
          <option value="<%= stock_item.id %>"><%= stock_item.name %> <%=stock_item.size%></option>
        <% end %>

      <% end %>

    </select>
  </label>

 <br>
 <br>

  <input  type='submit' value="Open Rental">
</form>
